@model IEnumerable<SubmitBug.Models.TB_BugSubmit>

@{
    ViewBag.Title = "Home Page";
}

<label>@ViewData["info"]</label>
<table class="table table-bordered table-condensed table-hover table-striped">
    工单资料
    <tr>
        <th>
            ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Describe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Claimant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComputerNo)
        </th>
        <th></th>
    </tr>
    @{
        int i = 0;

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @(i += 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Describe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Claimant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComputerNo)
                </td>
                <td>
                    @Html.ActionLink("查看进度", "Details", new { id = item.BId })
                </td>
            </tr>
        }
    }

</table>
<p>
    @Html.ActionLink("新建工单", "Create")
</p>